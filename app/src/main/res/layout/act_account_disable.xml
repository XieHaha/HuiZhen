<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include layout="@layout/public_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:paddingStart="35dp"
        android:textColor="@color/color_373d4d"
        android:textSize="@dimen/text_24"
        android:textStyle="bold"
        android:text="@string/txt_account_disable" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textColor="@color/color_6a6f80"
        android:textSize="@dimen/text_15"
        android:text="@string/txt_account_disable_hint"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@mipmap/pic_account_disable"
        android:drawablePadding="40dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/corner28_stroke1_1491fc"
        android:text="@string/txt_contact"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        android:layout_marginTop="57dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/color_1491fc" />


</LinearLayout>