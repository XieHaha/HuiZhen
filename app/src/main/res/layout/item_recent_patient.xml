<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="20dp"
    android:paddingEnd="45dp">

    <ImageView
        android:id="@+id/iv_patient_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/ic_default_header_r" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tv_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/txt_name"
            android:textStyle="bold"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_recently_add_time"
                android:textColor="@color/color_a1a8b3"
                android:textSize="@dimen/text_13"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="时间"
                android:textColor="@color/color_a1a8b3"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_13"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_patient_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_call"
        android:padding="10dp" />

</LinearLayout>