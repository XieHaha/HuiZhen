<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingStart="35dp"
    android:paddingEnd="35dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@mipmap/pic_qr_bg"
        android:paddingStart="50dp"
        android:paddingTop="50dp"
        android:paddingEnd="50dp"
        android:paddingBottom="43dp">

        <ImageView
            android:id="@+id/iv_head_img"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@mipmap/ic_default_header_r" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_head_img"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_20"
            android:textStyle="bold"
            tools:text="姓名姓名姓名" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/iv_head_img"
            android:textColor="@color/color_6a6f80"
            android:textSize="@dimen/text_14"
            tools:text="职称" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_head_img"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qr"
                android:layout_width="205dp"
                android:layout_height="205dp" />

            <TextView
                android:id="@+id/tv_scan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:text="@string/txt_scan_hint"
                android:textColor="@color/color_373d4d"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>