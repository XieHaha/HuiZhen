<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:background="@drawable/corner8_ffffff_bg">

        <ImageView
            android:id="@+id/iv_head_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_default_header_r" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_20"
            tools:text="姓名"
            android:layout_toEndOf="@id/iv_head_img"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6a6f80"
            android:textSize="@dimen/text_13"
            tools:text="职称"
            android:layout_toEndOf="@id/iv_head_img"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_scan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a1a8b3"
                android:textSize="@dimen/text_13"
                android:text="@string/txt_scan_hint" />

            <com.yht.frame.widgets.qrcode.BarCodeImageView
                android:id="@+id/iv_qr"
                android:layout_width="209dp"
                android:layout_height="209dp"
                android:layout_marginTop="12dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_scan_mode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/corner8_1491fc_bg"
            android:text="@string/txt_menu_doctor"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_16"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</RelativeLayout>