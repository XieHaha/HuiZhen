<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:paddingStart="20dp"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:paddingEnd="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hospital"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/color_373d4d"
                android:textSize="@dimen/text_16"
                tools:text="医院名称"
                android:singleLine="true"
                android:layout_marginEnd="27dp"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_cooperation" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_reserve"
            android:layout_width="wrap_content"
            android:textColor="@color/color_a1a8b3"
            android:textSize="@dimen/text_13"
            tools:text="业务范围"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:layout_marginEnd="27dp"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_hei_line"
        android:background="@color/color_ebedf0"
        android:layout_alignParentBottom="true" />

</RelativeLayout>