<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f8f9fa"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner10_ffffff_bg"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_head_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_default_header_r" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_head_img"
                android:layout_marginStart="12dp"
                tools:text="姓名"
                android:textSize="@dimen/text_18"
                android:layout_marginTop="1dp"
                android:textColor="@color/color_373d4d"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_head_img"
                android:layout_below="@id/tv_name"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_consultation_time_colon"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/color_a1a8b3" />

                <TextView
                    android:id="@+id/tv_remote_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2019年10月28日13:51:47"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/color_a1a8b3" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_hei_line"
            android:layout_marginTop="11dp"
            android:background="@color/color_ebedf0" />

        <LinearLayout
            android:id="@+id/layout_remote_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_tag_check_incomplete"
        android:layout_marginTop="12dp"
        android:visibility="visible" />

</RelativeLayout>