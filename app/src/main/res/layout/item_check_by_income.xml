<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/iv_check_type_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/selector_check_type_dot"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_check_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/txt_color_373d4d_c5c8cc_selector"
        android:textSize="@dimen/text_16"
        tools:text="检查" />

    <TextView
        android:id="@+id/tv_check_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_a1a8b3"
        android:textSize="@dimen/text_16"
        tools:text="￥110.00" />
</LinearLayout>