<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f8f9fa"
    android:fitsSystemWindows="true">

    <include layout="@layout/public_title" />

    <LinearLayout
        android:id="@+id/layout_notify"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/txt_set_message"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16" />

        <Switch
            android:id="@+id/sw_message_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_hei_line"
        android:background="@color/color_ebedf0"
        android:layout_marginStart="10dp" />

    <LinearLayout
        android:id="@+id/layout_about"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/txt_set_about"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_hei_line"
        android:background="@color/color_ebedf0"
        android:layout_marginStart="10dp" />

    <LinearLayout
        android:id="@+id/layout_version"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/txt_set_version"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:id="@+id/dot_new_version"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/circular_red_point_bg"
            android:layout_marginEnd="8dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="V1.0"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16"
            android:layout_marginEnd="11dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/color_ffffff"
        android:text="@string/txt_set_exit"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        android:textColor="@color/color_1491fc"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />


</LinearLayout>