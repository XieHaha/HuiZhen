<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_refresh_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_50000000"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="35dp"
        android:paddingEnd="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/txt_select_service_refresh_hint"
            android:textColor="@color/color_ffffff"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@id/text"
            android:src="@mipmap/ic_path" />

        <TextView
            android:id="@+id/tv_know"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="27dp"
            android:background="@drawable/corner28_1491fc_bg"
            android:gravity="center"
            android:text="@string/txt_know"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_16" />
    </RelativeLayout>

</RelativeLayout>