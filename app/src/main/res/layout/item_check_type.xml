<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_check_type_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_check_type_dot" />

    <TextView
        android:id="@+id/tv_check_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/txt_color_373d4d_c5c8cc_selector"
        android:textSize="@dimen/text_16"
        android:layout_marginEnd="7dp"
        tools:text="aaa"
        android:layout_marginStart="12dp" />

    <ImageView
        android:id="@+id/iv_check_type_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_label_cancel"
        android:layout_marginStart="5dp"
        android:visibility="gone" />
</LinearLayout>