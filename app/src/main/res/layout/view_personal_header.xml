<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="19dp"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:id="@+id/layout_personal_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_personal_depart"
            android:layout_width="68dp"
            android:layout_height="26dp"
            android:textColor="@color/color_fc671a"
            android:textSize="@dimen/text_14"
            android:background="@drawable/corner15_stroke1_fc671a"
            tools:text="脑外科"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_personal_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_14"
            tools:text="医院"
            android:layout_below="@id/tv_personal_depart"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/iv_personal_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_default_header_r" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pic_personal_bg"
        android:layout_marginTop="33dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            android:textColor="@color/color_ffffff"
            android:text="@string/txt_personal_balance" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_24"
            android:textColor="@color/color_ffffff"
            tools:text="100"
            android:layout_below="@id/text"
            android:layout_marginTop="3dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_balance_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/selector_balance_tab" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_hei_line"
            android:background="@color/color_ffffff"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_below="@id/tv_balance"
            android:layout_marginTop="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:orientation="horizontal"
            android:paddingTop="14dp">

            <LinearLayout
                android:id="@+id/layout_total_income"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/color_ffffff"
                    android:text="@string/txt_personal_total" />

                <TextView
                    android:id="@+id/tv_balance_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/color_ffffff"
                    tools:text="100"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/color_ffffff"
                    tools:text="@string/txt_personal_estimate_income" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_month_income"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/color_ffffff"
                    android:text="@string/txt_personal_month_total" />

                <TextView
                    android:id="@+id/tv_balance_month_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/color_ffffff"
                    tools:text="100"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/color_ffffff"
                    tools:text="@string/txt_personal_estimate_income" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_personal_history"
        android:textColor="@color/color_a1a8b3"
        android:textSize="@dimen/text_13"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="12dp" />


</LinearLayout>