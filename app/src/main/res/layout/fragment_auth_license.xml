<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:scrollbars="none"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="31dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/color_373d4d"
            android:text="@string/txt_upload_card"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:textColor="@color/color_6a6f80"
            android:text="@string/txt_upload_card_hint"
            android:layout_below="@id/text"
            android:layout_marginTop="12dp" />


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_below="@id/text1">

            <RelativeLayout
                android:id="@+id/layout_upload_one"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="113dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/corner4_ebedf0_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_camera"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/iv_upload_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_delete_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_delete"
                    android:layout_alignParentEnd="true"
                    android:padding="6dp"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_upload_two"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="113dp"
                android:background="@drawable/corner4_ebedf0_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_camera"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/iv_upload_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_delete_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_delete"
                    android:layout_alignParentEnd="true"
                    android:padding="6dp"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/text_13"
            android:textColor="@color/color_a1a8b3"
            android:padding="14dp"
            android:text="@string/txt_auth_hint"
            android:background="@drawable/corner4_dot"
            android:layout_below="@id/layout1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_auth_license_last"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:background="@drawable/corner28_stroke1_1491fc"
                android:text="@string/txt_last"
                android:gravity="center"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_1491fc" />

            <TextView
                android:id="@+id/tv_auth_license_submit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/selector_public_next"
                android:text="@string/txt_submit_review"
                android:gravity="center"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_ffffff" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>