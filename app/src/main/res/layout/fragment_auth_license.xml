<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:scrollbars="none"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="13dp"
        android:paddingBottom="31dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/color_373d4d"
            android:text="@string/txt_upload_card"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:textColor="@color/color_6a6f80"
            android:text="@string/txt_upload_card_hint"
            android:layout_below="@id/text"
            android:layout_marginTop="12dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginTop="30dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/text_13"
            android:textColor="@color/color_a1a8b3"
            android:layout_marginEnd="7dp"
            android:padding="14dp"
            android:text="@string/txt_auth_hint"
            android:background="@drawable/corner4_dot"
            android:layout_below="@id/recycler_view" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="13dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_auth_license_last"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:background="@drawable/corner28_stroke1_1491fc"
                android:text="@string/txt_last"
                android:gravity="center"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_1491fc" />

            <TextView
                android:id="@+id/tv_auth_license_submit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/selector_public_next"
                android:text="@string/txt_submit_review"
                android:gravity="center"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_ffffff" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>