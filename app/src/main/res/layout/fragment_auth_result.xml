<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="31dp">

    <TextView
        android:id="@+id/tv_auth_result_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_16"
        android:textColor="@color/color_373d4d"
        android:text="@string/txt_review"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_auth_result_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="63dp"
        android:textSize="@dimen/text_15"
        android:textColor="@color/color_6a6f80"
        android:text="@string/txt_review_hint"
        android:layout_below="@id/tv_auth_result_status"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:layout_below="@id/tv_auth_result_txt" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_auth_result_last"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:background="@drawable/corner28_stroke1_1491fc"
            android:text="@string/txt_contact"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            android:textColor="@color/color_1491fc" />

        <TextView
            android:id="@+id/tv_auth_result_submit"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/corner28_1491fc_bg"
            android:text="@string/txt_submit"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            android:layout_marginLeft="20dp"
            android:textColor="@color/color_ffffff"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>
