<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="19dp"
        android:paddingStart="20dp"
        android:paddingTop="19dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:text="@string/txt_past_medical_his" />

        <TextView
            android:id="@+id/tv_past_medical_his_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1491fc"
            android:textSize="@dimen/text_15"
            android:text="@string/txt_clear"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingBottom="19dp"
            android:visibility="gone" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_hei_line"
            android:background="@color/color_ebedf0"
            android:layout_below="@id/title"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/layout_past_medical_his"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_past_medical_his_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_1491fc"
                android:text="@string/txt_past_medical_his_not" />

            <ImageView
                android:id="@+id/iv_past_medical_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete"
                android:paddingStart="8dp" />
        </LinearLayout>


        <EditText
            android:id="@+id/et_past_medical_his"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_below="@id/line"
            android:background="@null"
            android:textSize="@dimen/text_16"
            android:singleLine="true"
            android:gravity="top"
            android:imeOptions="actionNext"
            android:textColor="@color/color_373d4d"
            android:layout_marginEnd="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_past_medical_his_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="#c5c8cc"
            android:layout_below="@id/et_past_medical_his"
            android:text="@string/txt_calc_num"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f8f9fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="19dp"
        android:paddingStart="20dp"
        android:paddingTop="19dp">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:text="@string/txt_family_medical_his" />

        <TextView
            android:id="@+id/tv_family_medical_his_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1491fc"
            android:textSize="@dimen/text_15"
            android:text="@string/txt_clear"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingBottom="19dp"
            android:visibility="gone" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_hei_line"
            android:background="@color/color_ebedf0"
            android:layout_below="@id/title1"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/layout_family_medical_his"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_family_medical_his_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_1491fc"
                android:text="@string/txt_family_medical_his_not" />/>

            <ImageView
                android:id="@+id/iv_family_medical_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete"
                android:paddingStart="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_family_medical_his"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_below="@id/line1"
            android:background="@null"
            android:textSize="@dimen/text_16"
            android:gravity="top"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/color_373d4d"
            android:layout_marginEnd="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_family_medical_his_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="#c5c8cc"
            android:layout_below="@id/et_family_medical_his"
            android:text="@string/txt_calc_num"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f8f9fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="19dp"
        android:paddingStart="20dp"
        android:paddingTop="19dp">

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:text="@string/txt_allergies" />

        <TextView
            android:id="@+id/tv_allergies_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1491fc"
            android:textSize="@dimen/text_15"
            android:text="@string/txt_clear"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingBottom="19dp"
            android:visibility="gone" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_hei_line"
            android:background="@color/color_ebedf0"
            android:layout_below="@id/title2"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="12dp" />


        <LinearLayout
            android:id="@+id/layout_allergies"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_allergies_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color_1491fc"
                android:text="@string/txt_allergies_not" />

            <ImageView
                android:id="@+id/iv_allergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete"
                android:paddingStart="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_allergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_below="@id/line2"
            android:background="@null"
            android:textSize="@dimen/text_16"
            android:gravity="top"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/color_373d4d"
            android:layout_marginEnd="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_allergies_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="#c5c8cc"
            android:layout_below="@id/et_allergies"
            android:text="@string/txt_calc_num"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f8f9fa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="19dp"
        android:paddingStart="20dp"
        android:paddingTop="19dp">

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_373d4d"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:text="@string/txt_reserve_check_diagnosis" />

        <TextView
            android:id="@+id/tv_diagnosis_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1491fc"
            android:textSize="@dimen/text_15"
            android:text="@string/txt_clear"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingBottom="19dp"
            android:visibility="gone" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_hei_line"
            android:background="@color/color_ebedf0"
            android:layout_below="@id/title3"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/et_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_below="@id/line3"
            android:background="@null"
            android:hint="@string/txt_diagnosis_hint"
            android:textColorHint="@color/color_a1a8b3"
            android:textSize="@dimen/text_16"
            android:gravity="top"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="@color/color_373d4d"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/tv_diagnosis_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="#c5c8cc"
            android:layout_below="@id/et_diagnosis"
            android:text="@string/txt_calc_num"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

</LinearLayout>