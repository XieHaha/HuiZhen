<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_title_bar_height"
    android:background="@color/color_ffffff"
    android:id="@+id/layout_title_root">

    <ImageView
        android:id="@+id/public_title_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:visibility="visible"
        android:src="@mipmap/ic_back_blue"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/public_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_18"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/color_373d4d"
        tools:text="标题"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/public_title_bar_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:textSize="@dimen/text_17"
        android:textColor="@color/txt_color_373d4d_1491fc_selector"
        android:visibility="gone"
        tools:text="联系我们" />

    <ImageView
        android:id="@+id/public_title_bar_right_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="16dp"
        android:layout_alignParentEnd="true"
        android:paddingLeft="16dp"
        android:visibility="gone"
        android:src="@mipmap/ic_call"
        android:layout_centerVertical="true" />
</RelativeLayout>