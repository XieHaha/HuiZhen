<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@drawable/corner10_ffffff_bg">

    <TextView
        android:id="@+id/dialog_simple_hint_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_373d4d"
        android:textStyle="bold"
        tools:text="@string/txt_hint"
        android:textSize="@dimen/text_16"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp" />

    <TextView
        android:id="@+id/dialog_simple_hint_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
        android:textColor="@color/color_373d4d"
        android:textSize="@dimen/text_16"
        android:gravity="center"
        android:minHeight="44dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_hei_line"
        android:background="@color/color_ebedf0"
        android:layout_marginTop="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_simple_hint_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/txt_cancel"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_16" />

        <View
            android:layout_width="@dimen/app_hei_line"
            android:layout_height="match_parent"
            android:background="@color/color_ebedf0" />

        <TextView
            android:id="@+id/dialog_simple_hint_enter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            tools:text="确定"
            android:textColor="@color/txt_color_373d4d_1491fc_selector"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
</LinearLayout>


